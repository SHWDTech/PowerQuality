@model PowerQuality.Models.PowerAnalysis.RecordSelect
@{
    ViewBag.Title = "系统首页";
}

<div class="single-content" style="padding: 20px 0; width: 80%; margin: auto;">
    <div class="float-card float-card-default float-card-single">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h4 style="text-align: center;">选择记录</h4>
            </div>
            <div class="panel-body">
                <div class="form-inline" style="border-bottom: 1px solid #e3e3e3; padding-bottom: 15px;">
                    <div class="form-group">
                        <span class="glyphicon glyphicon-time" style="font-size: 20px;"></span>
                        <span style="margin-left: 10px;" class="span100">查询记录范围：</span>
                        @Html.LabelFor(m => m.StartDate, new { @class = "lbl60" })
                        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control control120" })
                        @Html.LabelFor(m => m.EndDate, new { @class = "lbl60" })
                        @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control control120" })
                    </div>
                </div>
                <div style="display: flex; margin: 15px 0; position: relative;">
                    <div style="width: 20%; border: 1px solid #e3e3d3; min-height: 500px;">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section css{
    @Styles.Render("~/Content/datepicker")
}
@section scripts{
    @Scripts.Render("~/bundles/datepicker")
    <script type="text/javascript">
        $(function () {
            $('#StartDate').datetimepicker({
                locale: 'zh-cn',
                format: 'L'
            });

            $('#EndDate').datetimepicker({
                locale: 'zh-cn',
                format: 'L'
            });
        });
    </script>
}